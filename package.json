{
  "name": "just50words",
  "productName": "Just 50 Words",
  "version": "0.9.6",
  "author": "Gunjan Karun <gunjan@kalptaru.in>",
  "description": "A desktop content editor to create long form contents like articles, stories etc, specially useful for people who are new to writing.",
  "homepage" : "https://just50words.com",
  "repository": "https://github.com/gunjankarun/just50words",
  "build": {
    "asar": true,
    "appId": "com.quadralyst.just50words",
    "directories": {
      "output": "release-builds",
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "default"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "category": "Office",
      "icon" : "build/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "files": [
    "**/*",
    "!_assets${/*}",
    "!articles/**/*",
    "!.vscode${/*}",
    "!release-builds${/*}",
    "!buildResources{,/**/*}"
  ],
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "ng build && electron .",
    "electron-aot": "NODE_ENV='development' ng build --prod && electron .",
    "pack": "ng build --prod && build",
    "package-mac": "ng build --prod && electron-packager .  --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds  --no-asar",
    "create-installer-mac": "electron-installer-dmg ./release-builds/Electron\\ tutorial\\ app-darwin-x64/Electron\\ tutorial\\ app.app electron-tutorial-app --out=release-builds --overwrite --icon=assets/icons/mac/icon.icns",
    "package-win": "electron-packager . just-50-words --overwrite --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Electron Tutorial App\" --no-asar ",
    "package-linux": "ng build --prod && electron-packager . electron-tutorial-app --overwrite --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds --no-asar "
  },
  "private": true,
  "dependencies": {
    "@angular-devkit/core": "^0.2.0",
    "@angular/animations": "^5.2.5",
    "@angular/common": "^5.2.5",
    "@angular/compiler": "^5.2.5",
    "@angular/core": "^5.2.5",
    "@angular/forms": "^5.2.5",
    "@angular/http": "^5.2.5",
    "@angular/platform-browser": "^5.2.5",
    "@angular/platform-browser-dynamic": "^5.2.5",
    "@angular/router": "^5.2.5",
    "@ng-bootstrap/ng-bootstrap": "^1.0.0",
    "core-js": "^2.4.1",
    "electron-updater": "^2.21.0",
    "fs": "0.0.1-security",
    "ngx-electron": "^1.0.4",
    "rxjs": "^5.5.2",
    "zone.js": "^0.8.20"
  },
  "devDependencies": {
    "@angular/cli": "^1.7.0",
    "@angular/compiler-cli": "^5.2.5",
    "@angular/language-service": "^5.2.5",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "^6.0.101",
    "codelyzer": "^4.1.0",
    "electron": "^1.8.2",
    "electron-builder": "^19.56.2",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.4.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-phantomjs-launcher": "^1.0.4",
    "protractor": "~5.1.2",
    "ts-node": "~3.2.0",
    "tslint": "~5.7.0",
    "typescript": "~2.4.2"
  },
  "license": "MIT"
}
